{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Go: build active file",
            "type": "shell",
            "command": "/opt/homebrew/bin/go",
            "args": [
                "build",
                "-o",
                "${workspaceFolder}/debug.out",
                "${file}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Go: build active file for debug",
            "type": "shell",
            "command": "/opt/homebrew/bin/go",
            "args": [
                "build",
                "-gcflags=all='-N -l'", // デバッグに必要なコンパイルオプション
                "-o",
                "${workspaceFolder}/debug.out",
                "${file}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
        }
        // 参考：https://qiita.com/propella/items/9d7b1dece283cf462cb9
    ]
}